= form_for(@pais, :validate => true) do |f|
  - if @pais.errors.any?
    #error_explanation
      %h2
        = pluralize(@pais.errors.count, "error")
        
      %ul
        - @pais.errors.full_messages.each do |msg|
          %li= msg
  .clearfix
    = f.label :nombre
    .input
      = f.text_field :nombre
  %hr  
    .input
      = f.submit :class => 'btn primary'