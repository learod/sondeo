!!!
%html
  %head
    %title Sondeo
    = stylesheet_link_tag    "application"
    =# javascript_include_tag :defaults 
    = javascript_include_tag "jquery-1.6.2.min","jquery_ujs","rails.validations","bootstrap-dropdown","jquery.qtip-1.0.0-rc3"
    = csrf_meta_tags
  %body
    .topbar
      .fill
        .container
          %a.brand{:href=>'/main'} S. E. C.

          %ul.nav
            %li.dropdown
              %a.dropdown-toggle{:href=> "#" } Usuarios
              %ul.dropdown-menu
                %li 
                  = link_to 'Nuevo Usuario', new_user_path
            %li.dropdown
              %a.dropdown-toggle{:href=> "#" } Ciudadanos
              %ul.dropdown-menu
                %li 
                  = link_to 'Nuevo Usuario', new_user_path
            
            %li.dropdown
              %a.dropdown-toggle{:href=> "#" } Administraci&oacuten
              %ul.dropdown-menu
                %li
                  %a Paises
                  %ul 
                    %li 
                      = link_to 'Listado', paises_path
                    %li 
                      = link_to 'Nuevo', new_pais_path
                %li
                  %a Provincias
                  %ul 
                    %li 
                      = link_to 'Listado', provincias_path
                    %li 
                      = link_to 'Nueva', new_provincia_path
                    
                   
          .pull-right
            .usuario-leyenda
              Usuario: 
              %span.usuario
                = current_user.name
            .cerrar-session
              %a{:href => '/logout'} Cerrar Sesion

    .container
      - unless flash[:error].blank?
        %br
        .alert-message.error
          
          = flash[:error]

      - unless flash[:notice].blank?
        %br
        .alert-message.success
          
          = flash[:notice]
              
      = yield


:javascript
  $(document).ready(function(){
    $('.alert-message').delay(2000).fadeOut(400);
    $(".topbar").dropdown();
    $('.qtip').qtip({
         position: {
             corner: {
                target:'topLeft',
                tooltip:'bottomRight'
              }
          },

         style: {
            
             border: {
                width: 1,
                radius: 2,
                //color: '#459E00'
                color: '#000000'

             },
             background: '#339BB9',
             color: '#FFFFFF',
                  padding: 4,
                  textAlign: 'center',
                  tip: true
         } // Give it a crea mstyle to make it stand out
      });
  });