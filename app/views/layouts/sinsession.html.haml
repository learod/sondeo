!!!
%html
  %head
    %title Sondeo
    = stylesheet_link_tag    "application"
    = javascript_include_tag "jquery-1.6.2.min","jquery.anythingslider"
    = csrf_meta_tags
  %body
    .topbar
      .fill
        .container
          %a.brand Bienvenido
                   
          .pull-right
            = form_tag session_path do 
              
                 
              = text_field_tag 'login', @login, :placeholder => "usuario", :class=>"input-small" 
  
              = password_field_tag 'password', nil , :placeholder => "password", :class=>"input-small" 

              =# label_tag 'remember_me', 'Remember me' 
              =# check_box_tag 'remember_me', '1', @remember_me 

              = submit_tag 'Iniciar', :class => "btn"
    .container
      - unless flash[:error].blank?
        %br
        .alert-message.error
          %a.close{:href=>"javascript:cerrar_alert()"} Ã—
          
          = flash[:error]

      - unless flash[:notice].blank?
        %br
        .alert-message.success
          
          = flash[:error]
              
      = yield

:javascript
  $(document).ready(function(){
    $('.alert-message').delay(2000).fadeOut(400);
  });
  function cerrar_alert(){
    $('.alert-message').hide();
  }